{
  "name": "crypto-guardian",
  "version": "1.0.0",
  "description": "Crypto fraud detection web app",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "pnpm run build --workspace=frontend",
    "build:backend": "pnpm run build --workspace=backend",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "start": "pnpm --filter backend start",
    "prepare": "husky",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "reinstall": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "@eslint/js": "^9.39.1",
    "prettier": "^3.6.2",
    "lint-staged": "^16.2.6",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "typescript-eslint": "^8.46.3",
    "typescript": "~5.9.3",
    "@types/node": "^24.10.0"
  },
  "keywords": [
    "crypto",
    "blockchain",
    "fraud-detection",
    "security",
    "web3"
  ],
  "author": "sheikhlimon",
  "license": "MIT"
}
